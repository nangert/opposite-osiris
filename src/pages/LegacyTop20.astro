const token = tokenRanks;

const fetchItems = async () => {
    try {
        const response = await fetch("https://api.duelyst2.com/api/me/rank/srank_top", {
            method: "GET",
            headers: {
                "Content-Type": "application/json",
                Authorization: `Bearer ${token}`,
            },
        });
        const data = await response.json();
        return data;
    } catch (error) {
        console.error("Error fetching items:", error);
    }
};

const data: PlayerData[] = await fetchItems();
---

<Layout>
    <Header activeNav="legacyTop20" />
    <main id="main-content">
        <section id="hero">
            <h1>Ranked Top 20 Legacy</h1>
            <br />
            <ul id="links">
                {
                    data.map((player: PlayerData, index: number) => {
                        const link = "/history/" + player.username;
                        return (
                            <li>
                                <LinkButton href={link}>
                                    <h4>
                                        Rank: {index + 1} - {player.username}
                                    </h4>
                                </LinkButton>
                            </li>
                        );
                    })
                }
            </ul>
        </section>
    </main>
    <Footer />
</Layout>

